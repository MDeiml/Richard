<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:padding="10dp"
    android:clipToPadding="false">
    <android.support.v7.widget.CardView
        android:layout_alignParentTop="true"
        android:layout_above="@id/buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/backgroundLight" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp" >
            <com.mdeiml.richard.ChartView
                android:id="@+id/match_chart"
                android:layout_alignParentTop="true"
                android:layout_above="@id/probs_layout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                android:layout_marginBottom="20dp" />
            <LinearLayout
                android:id="@+id/probs_layout"
                android:layout_above="@id/importance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/propI"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textContent"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/propJ"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/textContent"
                    android:textSize="30sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/importance"
                android:layout_above="@id/points_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textContent"
                android:textSize="12sp"
                android:padding="3dp"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/points_layout"
                android:baselineAligned="false"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp" >
                <LinearLayout
                    android:id="@+id/serveI"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_tennis_grey600_48dp" />
                </LinearLayout>
                <TableLayout
                    android:id="@+id/points_table"
                    android:stretchColumns="0,2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
                <LinearLayout
                    android:id="@+id/serveJ"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_tennis_grey600_48dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonI"
            app:backgroundTint="@color/primaryRed"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonJ"
            app:backgroundTint="@color/primary"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent" />
    </LinearLayout>
</RelativeLayout>
